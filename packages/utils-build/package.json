{
    "name": "@nutry/utils-build",
    "version": "1.0.0-alpha.1",
    "license": "ISC",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsc -b tsconfig.build.json",
        "clean": "tsc -b tsconfig.build.json --clean && pnpm run clean:extra",
        "clean:extra": "rm -rf dist",
        "lint": "eslint --max-warnings=0 src",
        "test": "vitest run"
    },
    "devDependencies": {
        "@types/less": "^3.0.8",
        "@types/ramda": "^0.31.1",
        "@types/xml2js": "^0.4.14",
        "postcss": "^8.5.6",
        "webpack-dev-server": "^5.2.3"
    },
    "dependencies": {
        "@nutry/config-lint": "workspace:*",
        "@nutry/core": "workspace:*",
        "@nutry/settings": "workspace:*",
        "change-case": "^5.4.4",
        "cssnano": "^7.1.2",
        "escape-string-regexp": "^5.0.0",
        "globby": "^16.1.0",
        "internal-ip": "^8.0.1",
        "less-plugin-npm-import": "^2.1.0",
        "postcss-preset-env": "^11.1.2",
        "proxy-agent": "^6.5.0",
        "ramda": "^0.32.0",
        "xml2js": "^0.6.2"
    }
}