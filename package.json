{
  "name": "nutry",
  "version": "0.0.0",
  "author": "ticesky",
  "private": true,
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "license": "ISC",
  "scripts": {
    "build": "turbo run build --filter=./packages/*",
    "build:clean": "pnpm run clean && pnpm run build",
    "clean": "turbo run clean",
    "lint": "turbo run lint --filter=./packages/*",
    "test": "turbo run test --filter=./packages/*",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.19.30",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "stylelint": "^17.1.1",
    "turbo": "^2.8.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "stylelint": "^17.0.0"
      }
    }
  }
}
