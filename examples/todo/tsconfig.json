{
    "include": [
        "src",
        "e2e",
        "__tests__",
        "./*.ts",
        "swc"
    ],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "outDir": "dist",
        "noEmit": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
